<Window x:Class="TestPlugin.CookieGetter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestPlugin" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Style="{StaticResource UiWindow}"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="CookieGetter" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ui:TitleBar
  Title="Cookie获取"
  Grid.Row="0">
        </ui:TitleBar>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Menu>
                <ui:MenuItem Click="GetCookieBtn_Click" Header="我已登录" SymbolIcon="CheckMark16">
                </ui:MenuItem>
            </Menu>
            <wv2:WebView2 Grid.Row="1" x:Name="wv2" Source="https://www.baidu.com"/>
        </Grid>
    </Grid>
</Window>
