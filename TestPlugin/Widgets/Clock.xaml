<Page x:Class="TestPlugin.Widgets.Clock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestPlugin.Widgets"
      xmlns:vm="clr-namespace:TestPlugin.VM"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=vm:Clock}"
      d:DesignHeight="120" d:DesignWidth="120"
      Title="Clock">
    <Grid>
        <Border Background="White" CornerRadius="10">
            <Border Padding="15">

                <Border.Background>
                    <ImageBrush ImageSource="/TestPlugin;component/Resources/clock1.png"/>
                </Border.Background>
                <Grid>

                    <Image Source="/TestPlugin;component/Resources/hour1.png">
                        <Image.RenderTransform>
                            <RotateTransform Angle="{Binding Hour}" CenterX="43" CenterY="43"/>
                        </Image.RenderTransform>
                    </Image>
                    <Image  Source="/TestPlugin;component/Resources/min1.png">
                        <Image.RenderTransform>
                            <RotateTransform Angle="{Binding Min}" CenterX="43" CenterY="43"/>
                        </Image.RenderTransform>
                    </Image>
                    <Image Source="/TestPlugin;component/Resources/secs11.png">
                        <Image.RenderTransform>
                            <RotateTransform Angle="{Binding Sec}" CenterX="43" CenterY="43"/>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
